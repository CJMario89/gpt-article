datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model article {
  id          Int      @id @default(autoincrement())
  country     String
  city        String   @unique
  status      String
  title       String
  description String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model image {
  id        Int      @id @default(autoincrement())
  country   String
  city      String   @unique
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
