datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model cityArticle {
  id          Int      @id @default(autoincrement())
  country     String
  city        String   @unique
  status      Int      @default(0)
  title       String   @default("")
  description String   @default("")
  content     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model cityImage {
  id        Int      @id @default(autoincrement())
  country   String
  city      String   @unique
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model spotArticle {
  id          Int      @id @default(autoincrement())
  country     String
  city        String
  spot        String   @unique
  status      Int      @default(0)
  title       String   @default("")
  description String   @default("")
  content     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model spotImage {
  id        Int      @id @default(autoincrement())
  country   String
  city      String
  spot      String   @unique
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
